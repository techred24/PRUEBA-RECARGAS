<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:background="#0A304E"
        tools:context=".FormularioRecargas">
        <TextView
            android:id="@+id/tvNombreEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="164dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="184dp"
            android:text="Apolo Pay"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRecargar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recargar una tarjeta"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="56dp"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreEmpresa"
            android:textColor="#9B9B9B"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvFormulario"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRecargar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="15dp"
            >
            <RelativeLayout
                android:paddingHorizontal="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre:"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    />
                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tvNombre"
                    android:layout_toEndOf="@+id/tvNombre"
                    android:hint="Nombre"
                    android:background="@drawable/edittextstyle"
                    />
                <TextView
                    android:id="@+id/tvApellidoPaterno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellido paterno:"
                    android:layout_below="@+id/tvNombre"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    />
                <EditText
                    android:id="@+id/etApellidoPaterno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Apellido paterno"
                    android:layout_alignBaseline="@+id/tvApellidoPaterno"
                    android:background="@drawable/edittextstyle"
                    android:layout_toEndOf="@+id/tvApellidoPaterno"
                    />
                <TextView
                    android:id="@+id/tvApellidoMaterno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellido materno:"
                    android:layout_below="@+id/tvApellidoPaterno"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    />
                <EditText
                    android:id="@+id/etApellidoMaterno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Apellido materno"
                    android:layout_alignBaseline="@+id/tvApellidoMaterno"
                    android:layout_toEndOf="@+id/tvApellidoMaterno"
                    android:background="@drawable/edittextstyle"
                    />
                <TextView
                    android:id="@+id/tvCelular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Celular:"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tvApellidoMaterno"
                    android:layout_marginTop="20dp"
                    />
                <EditText
                    android:id="@+id/etCelular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Celular"
                    android:layout_alignBaseline="@id/tvCelular"
                    android:layout_toEndOf="@+id/tvCelular"
                    android:background="@drawable/edittextstyle"
                    android:inputType="phone"
                    />
                <TextView
                    android:id="@+id/tvSaldoDisponible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo disponible:"
                    android:layout_below="@+id/tvCelular"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    />
                <EditText
                    android:id="@+id/etSaldoDisponible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0.00"
                    android:layout_alignBaseline="@+id/tvSaldoDisponible"
                    android:layout_toEndOf="@+id/tvSaldoDisponible"
                    android:background="@drawable/edittextstyle"
                    android:enabled="false"
                    />
                <TextView
                    android:id="@+id/tvSaldoAgregar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo a agregar:"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tvSaldoDisponible"
                    android:layout_marginTop="20dp"
                    />
                <EditText
                    android:id="@+id/etSaldoAgregar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Saldo agregar"
                    android:layout_alignBaseline="@+id/tvSaldoAgregar"
                    android:layout_toEndOf="@+id/tvSaldoAgregar"
                    android:background="@drawable/edittextstyle"
                    android:inputType="numberDecimal"
                    />
                <TextView
                    android:id="@+id/tvCortesia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cortesia:"
                    android:layout_above="@+id/etCortesia"
                    android:layout_toEndOf="@+id/etSaldoAgregar"
                    />
                <EditText
                    android:id="@+id/etCortesia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Cortesia"
                    android:layout_alignBaseline="@+id/etSaldoAgregar"
                    android:layout_toEndOf="@+id/etSaldoAgregar"
                    android:background="@drawable/edittextstyle"
                    android:inputType="numberDecimal"
                    />
                <TextView
                    android:id="@+id/tvFolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Folio:"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tvSaldoAgregar"
                    android:layout_marginTop="20dp"
                    />
                <EditText
                    android:id="@+id/etFolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Folio"
                    android:layout_alignBaseline="@+id/tvFolio"
                    android:layout_toEndOf="@+id/tvFolio"
                    android:background="@drawable/edittextstyle"
                    />
                <TextView
                    android:id="@+id/tvID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tvFolio"
                    android:layout_marginTop="20dp"
                    />
                <EditText
                    android:id="@+id/etID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="E2:A5:C3:B1"
                    android:layout_alignBaseline="@+id/tvID"
                    android:layout_toEndOf="@+id/tvID"
                    android:background="@drawable/edittextstyle"
                    />
                <TextView
                    android:id="@+id/tvTipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo:"
                    android:layout_below="@+id/tvID"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    />
                <Spinner
                    android:id="@+id/sTipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_alignBaseline="@+id/tvTipo"
                    android:layout_toEndOf="@+id/tvTipo"
                    />
                <Button
                    android:id="@+id/buttonGuardar"
                    android:text="Guardar Tarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sTipo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/buttonstyle"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="60dp"
                    />
                <Button
                    android:layout_marginBottom="500dp"
                    android:id="@+id/buttonCancelar"
                    android:text="Cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttonGuardar"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/buttoncancelar"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="60dp"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/llOpciones"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cvFormulario"
            android:weightSum="2"
            >
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Recargar"
                android:backgroundTint="@color/button_custom"
                android:radius="10dp"
                android:paddingVertical="28dp"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Reporte"
                android:backgroundTint="@color/button_custom"
                android:backgroundTintMode="multiply"
                android:radius="10dp"
                android:paddingVertical="28dp"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
